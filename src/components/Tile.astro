---
import { getEntry } from 'astro:content';
import { slugifyStr } from "@utils/slugify";

const { postID } = Astro.props;
const ID = slugifyStr(postID);
const Post = await getEntry('blog', ID);

const icon = Post && Post.data ? Post.data.icon : 'path_to_default_icon.svg';
const link = `/posts/${ID}`;
---

<a class="" href={link}>
    <div class="border w-60 h-60 relative">
        <img src={icon} alt="Icon" class="border relative top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
    </div>
</a>



