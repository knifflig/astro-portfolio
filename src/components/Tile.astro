---
const { postSlug } = Astro.props;

// Construct the markdown file path using the provided postSlug
const filePath = `../content/blog/${postSlug}.md`;

// Fetch content from the markdown file
const content = Astro.fetchContent(filePath);

// Ensure content is fetched before extracting metadata
const markdownData = content.length ? content[0].metadata : {};
const { title, description, ogImage } = markdownData;

const link = `/posts/${postSlug}`;
---

<div class="flex flex-col backdrop-blur bg-white border border-[#ffffff29] dark:bg-slate-900 dark:shadow-[0_4px_30px_rgba(0,0,0,0.1)] p-6 relative rounded-lg shadow-[0_4px_30px_rgba(0,0,0,0.1)]">
    <a href={link}>
        <img src={ogImage} alt="Tile Image" class="text-primary h-12 mb-6 w-12" />
        <div class="font-bold text-xl">{title}</div>
        <p class="text-muted mt-2">{description}</p>
    </a>
</div>
