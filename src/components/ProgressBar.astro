---
// Destructure the props
let { skill, percentage } = Astro.props;
---

<div class="p-6">
    <div class="flex items-end justify-between">
        <h4 class="font-mono uppercase">{skill}</h4>
        <h3 class="text-3xl">{percentage}%</h3>
    </div>
    <div class="mt-2 h-3 w-full rounded-full">
        <div class="h-3 rounded-full" style={{ width: `${percentage}%` }}></div>
    </div>
</div>


