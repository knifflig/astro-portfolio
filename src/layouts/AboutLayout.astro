---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main>
    <section class="prose mb-28 max-w-3xl">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  img {
    border-radius: 1rem; /* Gives rounded corners */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Adds a shadow */
    display: block; /* To ensure margins apply correctly */
    margin: 0 auto; /* Centers the image horizontally */
    max-width: 50%; /* Makes the image take up to half the container's width */
    margin-bottom: 1rem; /* Adds a bottom margin for separation */
  }
</style>
